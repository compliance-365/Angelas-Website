---
import '../styles/global.css';  // <-- THIS makes Tailwind apply globally
const { title, description, canonical, schema } = Astro.props;
---
<html lang="en" class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
    {canonical && <link rel="canonical" href={canonical} />}
    {schema && Array.isArray(schema)
      ? schema.map((s) => <script type="application/ld+json" set:html={JSON.stringify(s)} />)
      : schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}
  </head>
  <body class="min-h-full bg-white text-slate-900 antialiased">
    <slot name="header" />
    <main><slot /></main>
    <slot name="footer" />
  </body>
</html>
