---
import Seo from '../components/Seo.astro';
---
<html lang="en-AU">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Source+Sans+3:wght@400;600&display=swap" rel="stylesheet" />
    <Seo {...Astro.props} />
    <link rel="icon" href="/brand/logo-icon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
    <style>
      body { font-family: Nunito, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans"; }
      small, .accent { font-family: 'Source Sans 3', Nunito, system-ui, sans-serif; }
    </style>
  </head>
  <body class="text-gray-900">
    <slot name="header" />
    <slot />
    <slot name="footer" />
  </body>
</html>