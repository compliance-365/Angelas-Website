---
const base = import.meta.env.BASE_URL;  // "/" locally, "/Angelas-Website/" on Pages
---
<header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-gray-100">
  <nav class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
    <a href={`${base}`} class="flex items-center gap-3">
      <img src={`${base}brand/logo-icon.svg`} alt="2Ways Consultancy logo" width="44" height="44" />
      <div class="leading-tight">
        <span class="font-semibold text-lg">2Ways</span><br />
        <span class="text-sm text-gray-600">Consultancy</span>
      </div>
    </a>

    <button class="md:hidden p-2 border rounded-lg" aria-label="Toggle menu"
      onclick="document.getElementById('navlinks').classList.toggle('hidden')">â˜°</button>

    <ul id="navlinks" class="hidden md:flex items-center gap-6 text-base font-medium">
      <li><a href={`${base}about/`} class="hover:text-[#00A3AF]">About</a></li>
      <li><a href={`${base}case-studies/`} class="hover:text-[#00A3AF]">Case Studies</a></li>
      <li><a href={`${base}services/rap/`} class="hover:text-[#00A3AF]">RAP</a></li>
      <li><a href={`${base}services/dashboard/`} class="hover:text-[#00A3AF]">RAP Dashboard</a></li>
      <li><a href={`${base}services/training/`} class="hover:text-[#00A3AF]">Training</a></li>
      <li><a href={`${base}contact/`} class="hover:text-[#00A3AF]">Contact</a></li>
    </ul>
  </nav>
</header>
