---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../config/site';
---
<BaseLayout title={`Contact | ${SITE.name}`} description="Start your RAP journey" canonical={`${SITE.url}/contact/`}>
  <Fragment slot="header"><Header /></Fragment>
  <section class="mx-auto max-w-3xl px-4 py-16 prose">
    <h1>Contact</h1>
    <form action="https://formspree.io/f/xgvwovew" method="POST" class="grid gap-4">
      <input class="border rounded px-3 py-2" name="name" placeholder="Your Name" required />
      <input class="border rounded px-3 py-2" type="email" name="email" placeholder="Your Email" required />
      <input class="border rounded px-3 py-2" name="subject" placeholder="Subject" required />
      <textarea class="border rounded px-3 py-2" name="message" rows="6" placeholder="Message" required></textarea>
      <button class="btn" type="submit">Send Message</button>
    </form>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>