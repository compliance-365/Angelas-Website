---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE } from '../../config/site';
const schema = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "Cultural Competency Training",
  "provider": {"@type": "Organization", "name": "2Ways Consultancy"},
  "description": "Modular, tailored training with live awareness sessions. Self-paced e-learning coming soon."
};
---
<BaseLayout title={`Cultural Competency Training | ${SITE.name}`} description="Modular training with live awareness sessions and sector-specific examples. E-learning coming soon." canonical={`${SITE.url}/services/training/`} schema={schema}>
  <Fragment slot="header"><Header /></Fragment>
  <section class="relative bg-[url('/hero-training.webp')] bg-cover bg-center">
    <div class="mx-auto max-w-6xl px-4 py-20 text-white" style="background: linear-gradient(180deg, rgba(0,0,0,0.35), rgba(0,0,0,0.25));">
      <h1 class="text-3xl md:text-4xl font-extrabold">Cultural Competency Training</h1>
      <p class="mt-3 max-w-3xl">Awareness modules, leadership sessions and practical scenarios by sector — with measurable outcomes.</p>
      <div class="mt-6 flex items-center gap-4">
        <a href="/contact/" class="btn">Register Your Interest</a>
        <a href="/case-studies/" class="btn-outline">See Outcomes</a>
      </div>
    </div>
  </section>
  <section class="mx-auto max-w-6xl px-4 py-16 prose">
    <h2>Program Streams</h2>
    <ul>
      <li><strong>Foundations:</strong> Awareness & terminology</li>
      <li><strong>Leaders:</strong> Cultural safety, policy & practice</li>
      <li><strong>Teams:</strong> Everyday cultural competence</li>
    </ul>
    <h2>Coming Soon — E‑Learning</h2>
    <p>Self-paced modules optimised for mobile and LMS course tiles with an icon-only logo variant.</p>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>