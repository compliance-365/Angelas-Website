---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE } from '../../config/site';

const schema = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "Cultural Competency Training",
  "provider": {"@type": "Organization", "name": "2Ways Consultancy"},
  "description": "Modular training with awareness modules and leadership workshops. E-learning coming soon."
};
---
<BaseLayout
  title={`Cultural Competency Training | ${SITE.name}`}
  description="Modular training with live awareness sessions and sector-specific examples. E-learning coming soon."
  canonical={`${SITE.url}/services/training/`}
  schema={schema}
>
  <Fragment slot="header"><Header /></Fragment>

  <!-- Hero -->
  <section class="relative bg-[url('/hero-training.webp')] bg-cover bg-center">
    <div class="mx-auto max-w-6xl px-4 py-20 text-white" style="background: linear-gradient(180deg, rgba(0,0,0,0.45), rgba(0,0,0,0.25));">
      <h1 class="text-3xl md:text-4xl font-extrabold">Cultural Competency Training</h1>
      <p class="mt-3 max-w-3xl">Awareness modules, leadership sessions and practical scenarios by sector — with measurable outcomes.</p>
      <div class="mt-6 flex items-center gap-4">
        <a href="/contact/" class="btn">Register Your Interest</a>
        <a href="/case-studies/" class="btn-outline">See Outcomes</a>
      </div>
    </div>
  </section>

  <!-- Streams -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <h2 class="text-2xl font-semibold">Program streams</h2>
    <div class="grid md:grid-cols-3 gap-6 mt-6">
      <div class="grid-card">
        <h3 class="font-semibold">Foundations</h3>
        <p class="text-sm mt-2">Terminology, history, protocols and culturally safe interactions for all staff.</p>
      </div>
      <div class="grid-card">
        <h3 class="font-semibold">Leaders</h3>
        <p class="text-sm mt-2">Policy & practice, inclusive leadership, recruitment and supplier diversity.</p>
      </div>
      <div class="grid-card">
        <h3 class="font-semibold">Teams</h3>
        <p class="text-sm mt-2">Everyday cultural competence, working with community, scenario-based learning.</p>
      </div>
    </div>
  </section>

  <!-- Outcomes -->
  <section class="mx-auto max-w-6xl px-4 py-6">
    <h2 class="text-2xl font-semibold">Measurable outcomes</h2>
    <ul class="list-disc ml-6 text-sm mt-4 max-w-3xl">
      <li>Improved cultural safety and engagement scores</li>
      <li>Completion tracking and attendance reporting</li>
      <li>Alignment with RAP actions and evidence requirements</li>
    </ul>
  </section>

  <!-- FAQ -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <h2 class="text-2xl font-semibold">Training FAQs</h2>
    <div class="mt-6 grid gap-4">
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Is the training in-person or virtual?</summary>
        <p class="mt-2 text-sm">Both are available; we also offer hybrid delivery across sites.</p>
      </details>
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Do you offer sector-specific examples?</summary>
        <p class="mt-2 text-sm">Yes — utilities, government, construction and more.</p>
      </details>
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Will there be e-learning?</summary>
        <p class="mt-2 text-sm">Yes — self-paced modules optimised for mobile and LMS course tiles.</p>
      </details>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
