---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE } from '../../config/site';

const base = import.meta.env.BASE_URL;

const schema = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "Cultural Competency Training",
  "provider": {"@type": "Organization", "name": "2Ways Consultancy"},
  "description": "Culturally grounded training pathways for staff and leaders — awareness modules, leadership sessions and sector-specific scenarios."
};
---
<BaseLayout
  title={`Cultural Competency Training | ${SITE.name}`}
  description="Awareness modules, leadership sessions and practical sector scenarios — aligned to your RAP and measured for impact."
  canonical={`${SITE.url}/services/training/`}
  schema={schema}
>
  <Fragment slot="header"><Header /></Fragment>

  <!-- HERO: parallax + glass card -->
  <section id="top" class="relative overflow-hidden">
    <div class="absolute inset-0">
      <div
        class="h-[48rem] bg-cover bg-center md:bg-fixed will-change-transform"
        style={`background-image:url('${base}hero-training.webp')`}
        data-parallax
        data-speed="0.15"
      ></div>
      <div class="absolute inset-0 bg-gradient-to-b from-black/65 via-black/40 to-black/30"></div>
    </div>

    <div class="relative mx-auto max-w-6xl px-4 h-[48rem] flex items-end pb-14">
      <div class="max-w-3xl text-white bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
        <p class="kicker">Cultural competence that sticks</p>
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight">Cultural Competency Training</h1>
        <p class="mt-3 text-white/90">
          Practical, respectful learning designed by Indigenous educators. Delivery for all staff and leaders, with measurable outcomes.
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a href={`${base}contact/`} class="btn">Register Your Interest</a>
          <a href={`${base}case-studies/`} class="btn-outline">See Outcomes</a>
        </div>
      </div>
    </div>
  </section>

  <!-- STICKY SUB-NAV -->
  <nav class="subnav sticky top-[64px] z-40 border-b border-gray-200">
    <div class="mx-auto max-w-6xl px-4 py-2 flex flex-wrap gap-1">
      <a href="#streams">Streams</a>
      <a href="#modules">Modules</a>
      <a href="#measurement">Measurement</a>
      <a href="#delivery">Delivery</a>
      <a href="#faq">FAQ</a>
      <a href={`${base}contact/`}>Contact</a>
    </div>
  </nav>

    <!-- PROGRAM STREAMS -->
  <section id="streams" class="section">
    <h2 class="text-2xl font-semibold reveal">Program streams</h2>
    <div class="grid md:grid-cols-3 gap-6 mt-6">
      <div class="stage-card p-5 opacity-0 translate-y-4 reveal card-raise">
        <div class="flex items-center justify-between">
          <h3 class="font-semibold">Foundations</h3>
          <span class="pill">All staff</span>
        </div>
        <p class="text-sm mt-2">Terminology, context, protocols and culturally safe interactions for all staff.</p>
        <ul class="list-disc ml-5 text-sm mt-3 text-gray-700">
          <li>History & terminology</li><li>Culturally safe practice</li><li>Everyday scenarios</li>
        </ul>
      </div>

      <div class="stage-card p-5 opacity-0 translate-y-4 reveal card-raise">
        <div class="flex items-center justify-between">
          <h3 class="font-semibold">Leaders</h3>
          <span class="pill">Managers</span>
        </div>
        <p class="text-sm mt-2">Policy & practice, inclusive leadership, recruitment and supplier diversity.</p>
        <ul class="list-disc ml-5 text-sm mt-3 text-gray-700">
          <li>Inclusive leadership</li><li>Recruitment & retention</li><li>Supplier diversity</li>
        </ul>
      </div>

      <div class="stage-card p-5 opacity-0 translate-y-4 reveal card-raise">
        <div class="flex items-center justify-between">
          <h3 class="font-semibold">Teams</h3>
          <span class="pill">Role-based</span>
        </div>
        <p class="text-sm mt-2">Practical, role-relevant learning with sector-specific casework.</p>
        <ul class="list-disc ml-5 text-sm mt-3 text-gray-700">
          <li>Sector scenarios</li><li>Community engagement</li><li>Team commitments</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- DETAILED MODULES -->
  <section id="modules" class="section">
    <h2 class="text-2xl font-semibold reveal">Detailed modules</h2>
    <div class="grid md:grid-cols-2 gap-6 mt-6">
      <div class="grid-card card-raise opacity-0 translate-y-4 reveal">
        <div class="flex items-center gap-3">
          <span class="icon-circle" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="7" r="3" stroke="white" stroke-width="1.8"/><path d="M5 21a7 7 0 0 1 14 0" stroke="white" stroke-width="1.8"/></svg>
          </span>
          <h3 class="font-semibold">Cultural Awareness 101</h3>
        </div>
        <p class="text-sm mt-2">Foundational understanding of cultures, histories, kinship and respectful language.</p>
      </div>

      <div class="grid-card card-raise opacity-0 translate-y-4 reveal">
        <div class="flex items-center gap-3">
          <span class="icon-circle" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M4 12h16M4 8h10M4 16h10" stroke="white" stroke-width="1.8"/></svg>
          </span>
          <h3 class="font-semibold">Working with Community</h3>
        </div>
        <p class="text-sm mt-2">Protocols, relationship building, engagement planning, and consent.</p>
      </div>

      <div class="grid-card card-raise opacity-0 translate-y-4 reveal">
        <div class="flex items-center gap-3">
          <span class="icon-circle" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M12 3v18M3 12h18" stroke="white" stroke-width="1.8"/></svg>
          </span>
          <h3 class="font-semibold">Inclusive Leadership</h3>
        </div>
        <p class="text-sm mt-2">Practical tools for leaders: policy, practice, recruitment, supplier diversity.</p>
      </div>

      <div class="grid-card card-raise opacity-0 translate-y-4 reveal">
        <div class="flex items-center gap-3">
          <span class="icon-circle" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M5 19h14M5 5h14v8H5z" stroke="white" stroke-width="1.8"/></svg>
          </span>
          <h3 class="font-semibold">Industry Scenarios</h3>
        </div>
        <p class="text-sm mt-2">Utilities, government and construction casework tailored to your context.</p>
      </div>
    </div>
  </section>

  <!-- MEASUREMENT -->
  <section id="measurement" class="section">
    <h2 class="text-2xl font-semibold reveal">Measurement & outcomes</h2>
    <ul class="list-disc ml-6 text-sm mt-4 max-w-3xl opacity-0 translate-y-4 reveal">
      <li>Pre/post training confidence & knowledge scoring</li>
      <li>Attendance & completion tracking (SharePoint list or LMS export)</li>
      <li>Alignment with RAP actions and quarterly reporting</li>
    </ul>
  </section>

  <!-- DELIVERY -->
  <section id="delivery" class="section">
    <div class="p-6 border rounded-2xl opacity-0 translate-y-4 reveal bg-white">
      <h3 class="font-semibold">Delivery options</h3>
      <ul class="list-disc ml-6 text-sm mt-2">
        <li>In-person workshops (half/full day)</li>
        <li>Virtual sessions (90–120 minutes)</li>
        <li>Hybrid delivery across sites</li>
        <li>E-learning (coming soon) with mobile-optimised modules</li>
      </ul>
      <p class="text-xs mt-3 text-gray-500">Custom content available for executive teams and frontline roles.</p>
    </div>
  </section>

  <!-- FAQ -->
  <section id="faq" class="section">
    <h2 class="text-2xl font-semibold">Training FAQs</h2>
    <div class="mt-6 grid gap-4">
      <details class="p-4 border rounded-xl reveal opacity-0 translate-y-4">
        <summary class="font-semibold">Is the training in-person or virtual?</summary>
        <p class="mt-2 text-sm">Both are available; we also offer hybrid delivery across sites.</p>
      </details>
      <details class="p-4 border rounded-xl reveal opacity-0 translate-y-4">
        <summary class="font-semibold">Do you offer sector-specific examples?</summary>
        <p class="mt-2 text-sm">Yes — utilities, government, construction and more.</p>
      </details>
      <details class="p-4 border rounded-xl reveal opacity-0 translate-y-4">
        <summary class="font-semibold">Will there be e-learning?</summary>
        <p class="mt-2 text-sm">Yes — self-paced modules optimised for mobile and LMS course tiles.</p>
      </details>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>

  <!-- Parallax (mobile fallback) + Reveal -->
  <script is:inline>
    const parallaxEls = document.querySelectorAll('[data-parallax]');
    const onScroll = () => {
      const y = window.scrollY || window.pageYOffset;
      parallaxEls.forEach(el => {
        if (window.matchMedia('(max-width: 767px)').matches) {
          const speed = parseFloat(el.dataset.speed || '0.15');
          el.style.transform = `translate3d(0,${y * speed * -0.4}px,0)`;
        }
      });
    };
    window.addEventListener('scroll', onScroll, { passive: true }); onScroll();

    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){ e.target.classList.remove('opacity-0','translate-y-4'); io.unobserve(e.target); }
      });
    },{threshold:0.15});
    document.querySelectorAll('.reveal').forEach(el=>io.observe(el));
  </script>

<section class="section">
    <div class="cta-banner">
      <div>
        <h3 class="text-xl font-semibold">Ready to move from intent to impact?</h3>
        <p class="text-white/90 text-sm">Book a discovery call and we’ll scope stage, priorities and timelines together.</p>
      </div>
      <a href={`${import.meta.env.BASE_URL}contact/`} class="btn bg-white text-[var(--brand-dark)] hover:bg-white/90">Talk to us</a>
    </div>
  </section>

</BaseLayout>
