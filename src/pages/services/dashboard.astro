---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE } from '../../config/site';

const schema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "applicationCategory": "BusinessApplication",
  "name": "2Ways RAP Dashboard",
  "operatingSystem": "Web",
  "offers": {"@type":"Offer","price":"0","priceCurrency":"AUD"},
  "description": "SharePoint-hosted RAP dashboard for tasks, owners, evidence and reporting."
};
---
<BaseLayout
  title={`RAP Dashboard | ${SITE.name}`}
  description="SharePoint-hosted hub for RAP tasks, ownership, evidence and reporting."
  canonical={`${SITE.url}/services/dashboard/`}
  schema={schema}
>
  <Fragment slot="header"><Header /></Fragment>

  <!-- Hero -->
  <section class="relative bg-[url('/hero-dashboard.webp')] bg-cover bg-center">
    <div class="mx-auto max-w-6xl px-4 py-20 text-white" style="background: linear-gradient(180deg, rgba(0,0,0,0.45), rgba(0,0,0,0.25));">
      <h1 class="text-3xl md:text-4xl font-extrabold">RAP Dashboard (SharePoint)</h1>
      <p class="mt-3 max-w-3xl">Actions, owners, due dates, evidence and reporting — exportable to your tenant via PnP provisioning.</p>
      <div class="mt-6 flex items-center gap-4">
        <a href="/contact/" class="btn">Request a Demo</a>
        <a href="/services/rap/" class="btn-outline">See RAP Services</a>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <div class="grid md:grid-cols-3 gap-6">
      <div class="grid-card">
        <h3 class="font-semibold">Lists & Libraries</h3>
        <ul class="list-disc ml-5 text-sm mt-2">
          <li>RAP Actions (owners, due dates, status)</li>
          <li>Milestones & Evidence</li>
          <li>Training Sessions & Attendance</li>
          <li>Risks & Issues</li>
          <li>Reporting Periods (quarters)</li>
        </ul>
      </div>
      <div class="grid-card">
        <h3 class="font-semibold">Views & Reports</h3>
        <p class="text-sm mt-2">Quarterly status, overdue actions, evidence-due, KPI snapshots. Export to Excel or connect Power BI.</p>
      </div>
      <div class="grid-card">
        <h3 class="font-semibold">Automation</h3>
        <p class="text-sm mt-2">Power Automate reminders, approvals and evidence requests with owner notifications.</p>
      </div>
    </div>

    <div class="mt-10 p-6 border rounded-2xl">
      <h3 class="font-semibold">Provisioning</h3>
      <ol class="list-decimal ml-5 text-sm mt-2">
        <li>We build in our tenant (SharePoint).</li>
        <li>Export via PnP provisioning (.pnp template).</li>
        <li>Import into your tenant; set permissions, flows and branding.</li>
      </ol>
      <p class="text-xs mt-3 text-gray-500">Note: Customer SharePoint admin access is required for import.</p>
    </div>
  </section>

  <!-- FAQ -->
  <section class="mx-auto max-w-6xl px-4 pb-16">
    <h2 class="text-2xl font-semibold">Dashboard FAQs</h2>
    <div class="mt-6 grid gap-4">
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Can we host this in our own Microsoft 365 tenant?</summary>
        <p class="mt-2 text-sm">Yes. We provide a PnP template for import, then help enable flows and permissions.</p>
      </details>
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Can we add custom fields or views?</summary>
        <p class="mt-2 text-sm">Absolutely. The lists and views are extendable; we commonly add sector-specific fields.</p>
      </details>
      <details class="p-4 border rounded-xl">
        <summary class="font-semibold">Do you support Power BI?</summary>
        <p class="mt-2 text-sm">Yes — we can publish summary reports from list data and evidence status.</p>
      </details>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
