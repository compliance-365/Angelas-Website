---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE } from '../../config/site';

const base = import.meta.env.BASE_URL;

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Reconciliation Action Plans (RAP)',
  provider: { '@type': 'Organization', name: '2Ways Consultancy' },
  areaServed: 'AU',
  description:
    'End-to-end RAP planning, delivery, evidence and reporting across Reflect, Innovate, Stretch and Elevate, led by Indigenous consultants.'
};
---
<BaseLayout
  title={`Reconciliation Action Plans (RAP) | ${SITE.name}`}
  description="Indigenous-led RAP strategy and delivery across Reflect, Innovate, Stretch, and Elevate — with evidence and reporting baked in."
  canonical={`${SITE.url}/services/rap/`}
  schema={serviceSchema}
>
  <Fragment slot="header"><Header /></Fragment>

  <!-- Parallax Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <div
        class="h-[44rem] bg-cover bg-center will-change-transform"
        style={`background-image:url('${base}hero-home.webp')`}
        data-parallax
        data-speed="0.25"
      ></div>
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/35 to-black/25"></div>
    </div>

    <div class="relative mx-auto max-w-6xl px-4 h-[44rem] flex items-end pb-14 text-white">
      <div class="max-w-3xl">
        <p class="kicker">Indigenous Australian–led</p>
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight">Reconciliation Action Plans</h1>
        <p class="mt-3 text-white/90">
          We move RAPs from documents to outcomes — aligning Reflect, Innovate, Stretch and Elevate with clear governance,
          owners, timelines and measurable impact.
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a href={`${base}contact/`} class="btn">Book a RAP Discovery Call</a>
          <a href={`${base}services/dashboard/`} class="btn-outline">See the RAP Dashboard</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Outcomes -->
  <section class="mx-auto max-w-6xl px-4 py-16">
    <h2 class="text-2xl font-semibold reveal">What you’ll achieve</h2>
    <div class="grid md:grid-cols-3 gap-6 mt-6">
      <div class="grid-card opacity-0 translate-y-4 reveal"><h3 class="font-semibold">Clear roadmap</h3><p class="text-sm mt-2">Owners, timelines, milestones and RA governance cadence.</p></div>
      <div class="grid-card opacity-0 translate-y-4 reveal"><h3 class="font-semibold">Evidence & reporting</h3><p class="text-sm mt-2">Quarterly snapshots and proof points captured in the RAP Dashboard.</p></div>
      <div class="grid-card opacity-0 translate-y-4 reveal"><h3 class="font-semibold">Cultural uplift</h3><p class="text-sm mt-2">Capability grows through training, engagement and accountable delivery.</p></div>
    </div>
  </section>

  <!-- RAP Stages (Reflect / Innovate / Stretch / Elevate) -->
  <section class="mx-auto max-w-6xl px-4 py-6">
    <h2 class="text-2xl font-semibold reveal">RAP stages we support</h2>
    <div class="grid md:grid-cols-4 gap-6 mt-6">
      <div class="grid-card opacity-0 translate-y-4 reveal">
        <h3 class="font-semibold">Reflect</h3>
        <p class="text-sm mt-2">Foundations, governance & commitments. Baseline, priorities and respectful protocols.</p>
        <ul class="text-sm mt-3 list-disc pl-5">
          <li>Stakeholder mapping</li><li>Baseline & gap analysis</li><li>Governance setup</li>
        </ul>
      </div>
      <div class="grid-card opacity-0 translate-y-4 reveal">
        <h3 class="font-semibold">Innovate</h3>
        <p class="text-sm mt-2">Scale training, engagement & supplier diversity with clear measures.</p>
        <ul class="text-sm mt-3 list-disc pl-5">
          <li>Training rollout</li><li>Engagement plans</li><li>Procurement goals</li>
        </ul>
      </div>
      <div class="grid-card opacity-0 translate-y-4 reveal">
        <h3 class="font-semibold">Stretch</h3>
        <p class="text-sm mt-2">Embed practice and show measurable improvement against KPIs.</p>
        <ul class="text-sm mt-3 list-disc pl-5">
          <li>KPI tracking</li><li>Leadership accountability</li><li>Quarterly reviews</li>
        </ul>
      </div>
      <div class="grid-card opacity-0 translate-y-4 reveal">
        <h3 class="font-semibold">Elevate</h3>
        <p class="text-sm mt-2">Sector leadership and public accountability — mentoring and knowledge share.</p>
        <ul class="text-sm mt-3 list-disc pl-5">
          <li>Thought leadership</li><li>Mentoring networks</li><li>Public reporting</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Delivery model -->
  <section class="mx-auto max-w-6xl px-4 py-16 prose">
    <h2 class="reveal">How we deliver</h2>
    <p>
      We co-design with your teams and community partners. Each action has an owner, due date and evidence type —
      managed in the <a href={`${base}services/dashboard/`}>RAP Dashboard</a>. Training streams run alongside delivery so capability uplifts are measured and reported.
    </p>
  </section>

  <!-- CTA -->
  <section class="mx-auto max-w-6xl px-4 pb-16">
    <div class="p-6 border rounded-2xl flex flex-col md:flex-row items-center justify-between gap-4 opacity-0 translate-y-4 reveal">
      <div>
        <h3 class="font-semibold text-lg">Start with a discovery call</h3>
        <p class="text-sm text-gray-600">We’ll scope your current stage, priorities and timelines.</p>
      </div>
      <a href={`${base}contact/`} class="btn">Talk to us</a>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>

  <!-- Parallax + Reveal Scripts -->
  <script is:inline>
    const parallaxEls = document.querySelectorAll('[data-parallax]');
    const onScroll = () => {
      const y = window.scrollY || window.pageYOffset;
      parallaxEls.forEach(el => {
        const speed = parseFloat(el.dataset.speed || '0.25');
        el.style.transform = `translate3d(0,${y * speed * -0.2}px,0)`;
      });
    };
    window.addEventListener('scroll', onScroll, { passive: true }); onScroll();

    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){ e.target.classList.remove('opacity-0','translate-y-4'); e.target.classList.add('transition','duration-700'); io.unobserve(e.target); }
      });
    },{threshold:0.15});
    document.querySelectorAll('.reveal').forEach(el=>io.observe(el));
  </script>
</BaseLayout>
