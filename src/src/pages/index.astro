---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroHome from '../components/HeroHome.astro';
import { SITE } from '../config/site';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: SITE.name,
  url: SITE.url,
  logo: `${SITE.url}/brand/logo-icon.svg`,
  areaServed: 'AU',
  description: SITE.description
};
---
<BaseLayout title={SITE.title} description={SITE.description} canonical={SITE.url} schema={schema}>
  <Fragment slot="header"><Header /></Fragment>

  <HeroHome />

  <section class="mx-auto max-w-6xl px-4 py-16">
    <h2 class="text-2xl font-semibold">What we do</h2>
    <div class="grid md:grid-cols-3 gap-6 mt-6">
      <a class="grid-card" href="/services/rap/">
        <h3 class="font-semibold">RAP Strategy & Delivery</h3>
        <p class="mt-2 text-sm">Clear roadmaps with owners, timelines and measurable outcomes.</p>
      </a>
      <a class="grid-card" href="/services/dashboard/">
        <h3 class="font-semibold">RAP Dashboard (SharePoint)</h3>
        <p class="mt-2 text-sm">Actions, evidence and reporting in one place, exportable to your tenant.</p>
      </a>
      <a class="grid-card" href="/services/training/">
        <h3 class="font-semibold">Cultural Competency Training</h3>
        <p class="mt-2 text-sm">Awareness modules and leadership workshops with sector examples.</p>
      </a>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>